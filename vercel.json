{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/styles.css",
      "destination": "/api/styles"
    },
    {
      "source": "/script.js", 
      "destination": "/api/script"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
} 